{
  "compilerOptions": {
    "target": "ES2015",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ESNext"],
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "./dist",
    "types": ["node"]
  },
  "include": ["src", "global.d.ts", "tests"],
  "exclude": ["node_modules"]
}
